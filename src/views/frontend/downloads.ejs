<%- contentFor('body') %>

<div class="container py-5">
    <h1 class="mb-4">Downloads</h1>
    
    <div class="row mb-4">
        <div class="col-md-8">
            <form action="/downloads" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search downloads..." value="<%= searchQuery %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <% if (locals.categories && categories.length > 0) { %>
        <div class="col-md-4">
            <form action="/downloads" method="GET" class="d-flex">
                <select name="category" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category %>" <%= selectedCategory === category ? 'selected' : '' %>><%= category %></option>
                    <% }); %>
                </select>
                <% if (selectedCategory) { %>
                    <a href="/downloads" class="btn btn-outline-secondary">Clear</a>
                <% } %>
            </form>
        </div>
        <% } %>
    </div>
    
    <% if (locals.downloads && downloads.length > 0) { %>
        <div class="row">
            <% downloads.forEach(function(download) { %>
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= download.title %></h5>
                            <% if (download.category) { %>
                                <div class="mb-2">
                                    <span class="badge bg-secondary"><%= download.category %></span>
                                </div>
                            <% } %>
                            <% if (download.description) { %>
                                <p class="card-text"><%= download.description %></p>
                            <% } %>
                            <div class="d-flex align-items-center mt-3">
                                <% 
                                let icon = 'fa-file';
                                if (download.mimeType.includes('pdf')) {
                                    icon = 'fa-file-pdf';
                                } else if (download.mimeType.includes('word')) {
                                    icon = 'fa-file-word';
                                } else if (download.mimeType.includes('excel') || download.mimeType.includes('spreadsheet')) {
                                    icon = 'fa-file-excel';
                                } else if (download.mimeType.includes('image')) {
                                    icon = 'fa-file-image';
                                } else if (download.mimeType.includes('zip') || download.mimeType.includes('rar')) {
                                    icon = 'fa-file-archive';
                                }
                                %>
                                <i class="fas <%= icon %> fa-2x me-3"></i>
                                <div>
                                    <div class="small text-muted"><%= download.originalName %></div>
                                    <div class="small text-muted"><%= (download.size / 1024).toFixed(2) %> KB</div>
                                </div>
                                <div class="ms-auto">
                                    <a href="/downloads/<%= download.id %>" class="btn btn-primary">
                                        <i class="fas fa-download me-1"></i> Download
                                    </a>
                                </div>
                            </div>
                            <div class="mt-2 text-end small text-muted">
                                Downloaded <%= download.downloadCount %> times
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            <% if (searchQuery || selectedCategory) { %>
                No downloads found matching your criteria. <a href="/downloads">View all downloads</a>.
            <% } else { %>
                No downloads available at this time.
            <% } %>
        </div>
    <% } %>
</div>
