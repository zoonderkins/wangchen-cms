<%- contentFor('body') %>
    <!-- Navigation Tabs -->
    <!-- 添加箭頭按鈕的導航欄容器 -->
    <div class="relative flex items-center my-4 px-6 sm:px-16 lg:px-32">
        <!-- 導航欄 -->
        <nav id="scrollable-nav" class="flex overflow-auto scrollbar-hide scroll-smooth">
            <a href="#platform" class="subtitle px-6 py-2 rounded-full mr-4 min-w-max custom-button-yellow active">
                <%= currentLanguage==='en' ? 'Taiwan Smart System Integrated Manufacturing Platform' : '臺灣智慧系統整合製造平台' %>
            </a>
            <a href="#datacenter" class="subtitle px-6 py-2 rounded-full mr-4 min-w-max custom-button-yellow">
                <%= currentLanguage==='en' ? 'AI Computing Data Center Construction' : 'AI運算資料中心建置' %>
            </a>
            <a href="#health" class="subtitle px-6 py-2 rounded-full mr-4 min-w-max custom-button-yellow">
                <%= currentLanguage==='en' ? 'Smart Healthcare Industry Innovation Park' : '智慧健康產業創新園區' %>
            </a>
            <a href="#green" class="subtitle px-6 py-2 rounded-full mr-4 min-w-max custom-button-yellow">
                <%= currentLanguage==='en' ? 'Net-Zero Green Energy Demonstration Zone' : '淨零綠能示範場域' %>
            </a>
            <a href="#security" class="subtitle px-6 py-2 rounded-full min-w-max custom-button-yellow">
                <%= currentLanguage==='en' ? 'Cybersecurity and Smart Technology Zone' : '資安暨智慧科技專區' %>
            </a>
            <a href="#forest" class="subtitle px-6 py-2 rounded-full min-w-max custom-button-yellow">
                <%= currentLanguage==='en' ? 'Smart Rainforest Industry Regeneration' : '智慧雨林產業創生' %>
            </a>
        </nav>
        <!-- 左箭頭按鈕 -->
        <button id="scroll-left"
            class="absolute left-0 sm:left-10 z-10 px-2 py-2 text-gray-600 bg-white rounded-full shadow-md hover:bg-gray-100 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" alt="<%= currentLanguage==='en' ? 'Left Arrow' : '左箭頭' %>">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </button>
        <!-- 右箭頭按鈕 -->
        <button id="scroll-right"
            class="absolute right-0 sm:right-10 z-10 px-2 py-2 text-gray-600 bg-white rounded-full shadow-md hover:bg-gray-100 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" alt="<%= currentLanguage==='en' ? 'Right Arrow' : '右箭頭' %>">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </button>
    </div>

    <!-- Divider -->
    <div class="w-screen relative" style="left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;">
        <hr class="border-t-2 border-gray-200 mb-16">
    </div>

    <!-- Sample Promotion embed platform -->

    <!-- Aboutplatform -->
    <section id="platform" class="px-6 pb-8 sm:px-16 sm:pb-16 lg:px-32 lg:pb-32">
        <div class="max-w-6xl mx-auto">
            <h1 class="text-3xl font-bold mb-8 text-center">
              <%= currentLanguage==='en' ? 'Manufacturing Platform' : '製造平台' %>
            </h1>
      
            <% if (platformsByCategory && platformsByCategory.length> 0) { %>
              <div class="space-y-16">
                <% platformsByCategory.forEach(function(category) { %>
                  <% if (category.platforms && category.platforms.length> 0) { %>
                    <section class="mb-12">
                      <h2 class="text-2xl font-semibold mb-6 pb-2 border-b-2 border-gray-200">
                        <%= currentLanguage==='en' ? category.name_en : category.name_tw %>
                      </h2>
      
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <% category.platforms.forEach(function(platform) { %>
                          <div class="bg-white rounded-lg shadow-md overflow-hidden">
                            <div class="p-6">
                              <h3 class="text-xl font-semibold mb-4 text-gray-800">
                                <%= currentLanguage==='en' ? platform.title_en : platform.title_tw %>
                              </h3>
      
                              <% if (platform.type==='plain_text' ) { %>
                                <div class="prose max-w-none quill-content">
                                  <div class="ql-container ql-snow" style="border: none;">
                                    <div class="ql-editor quill-content-wrapper" <% if ((currentLanguage==='en' && platform._content_en_is_delta) ||
                                      (currentLanguage==='tw' && platform._content_tw_is_delta)) { %>
                                      data-is-delta="true"
                                      <% } %>
                                        id="quill-content-<%= platform.id %>-<%= currentLanguage %>">
                                            <%- currentLanguage==='en' ? platform.content_en : platform.content_tw %>
                                    </div>
                                  </div>
                                </div>
                                <% if (platform.imagePath) { %>
                                  <div class="mt-4">
                                    <img src="<%= platform.imagePath %>"
                                      alt="<%= currentLanguage === 'en' ? platform.title_en : platform.title_tw %>"
                                      class="w-full h-auto rounded-lg shadow-sm">
                                  </div>
                                  <% } %>
      
                                    <% } else if (platform.type==='image' ) { %>
                                      <% if (platform.imagePath) { %>
                                        <div class="mb-4">
                                          <img src="<%= platform.imagePath %>"
                                            alt="<%= currentLanguage === 'en' ? platform.title_en : platform.title_tw %>"
                                            class="w-full h-auto rounded-lg shadow-sm">
                                        </div>
                                        <div class="text-gray-700 quill-content">
                                          <div class="ql-container ql-snow" style="border: none;">
                                            <div class="ql-editor">
                                              <%- currentLanguage==='en' ? platform.content_en : platform.content_tw %>
                                            </div>
                                          </div>
                                        </div>
                                        <% } else { %>
                                          <div class="bg-gray-100 p-4 rounded-lg text-center text-gray-500">
                                            <%= currentLanguage==='en' ? 'Image not available' : '圖片不可用' %>
                                          </div>
                                          <% } %>
      
                                            <% } else if (platform.type==='attachment_only' ) { %>
                                              <% if (platform.imagePath) { %>
                                                <div class="mb-4">
                                                  <img src="<%= platform.imagePath %>"
                                                    alt="<%= currentLanguage === 'en' ? platform.title_en : platform.title_tw %>"
                                                    class="w-full h-auto rounded-lg shadow-sm">
                                                </div>
                                                <% } %>
      
                                                  <% if (platform.attachments && platform.attachments.length> 0) { %>
                                                    <div class="mt-4">
                                                      <h4 class="font-medium mb-2">
                                                        <%= currentLanguage==='en' ? 'Downloads' : '下載' %>
                                                      </h4>
                                                      <div class="space-y-2">
                                                        <% platform.attachments.forEach(function(attachment) { %>
                                                          <a href="<%= attachment.path %>" download
                                                            class="flex items-center p-2 hover:bg-gray-50 rounded-md group">
                                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                              class="h-5 w-5 text-gray-400 group-hover:text-gray-500"
                                                              fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                              <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                                            </svg>
                                                            <span
                                                              class="ml-2 text-sm text-gray-600 group-hover:text-gray-900">
                                                              <%= attachment.originalName %>
                                                            </span>
                                                            <span class="ml-auto text-xs text-gray-400">
                                                              <%= Math.round(attachment.size / 1024) %> KB
                                                            </span>
                                                          </a>
                                                          <% }); %>
                                                      </div>
                                                    </div>
                                                    <% } else { %>
                                                      <div class="bg-gray-100 p-4 rounded-lg text-center text-gray-500">
                                                        <%= currentLanguage==='en' ? 'No attachments available' : '沒有可用的附件' %>
                                                      </div>
                                                      <% } %>
      
                                                        <% } else if (platform.type==='partners' ) { %>
                                                          <% let partnersData=platform.parsedPartnersData || { suppliers: {
                                                            companies_en: [], companies_tw: [] }, buyers: { companies_en: [],
                                                            companies_tw: [] } }; if (!partnersData) { try { if
                                                            (platform.partnersData) {
                                                            partnersData=JSON.parse(platform.partnersData); } } catch (e) {
                                                            console.error('Error parsing partners data:', e); partnersData={
                                                            suppliers: { companies_en: [], companies_tw: [] }, buyers: {
                                                            companies_en: [], companies_tw: [] } }; } } const
                                                            suppliersCompanies=currentLanguage==='en' ?
                                                            (partnersData.suppliers?.companies_en || []) :
                                                            (partnersData.suppliers?.companies_tw || []); const
                                                            buyersCompanies=currentLanguage==='en' ?
                                                            (partnersData.buyers?.companies_en || []) :
                                                            (partnersData.buyers?.companies_tw || []); const
                                                            hasSuppliers=suppliersCompanies.length> 0;
                                                            const hasBuyers = buyersCompanies.length > 0;
                                                            %>
      
                                                            <% if (platform.imagePath) { %>
                                                              <div class="mb-5">
                                                                <img src="<%= platform.imagePath %>"
                                                                  alt="<%= currentLanguage === 'en' ? platform.title_en : platform.title_tw %>"
                                                                  class="w-full h-auto rounded-lg shadow-sm object-cover">
                                                              </div>
                                                              <% } %>
      
                                                                <% if (hasSuppliers) { %>
                                                                  <div class="mb-6">
                                                                    <div class="flex items-center mb-3">
                                                                      <span
                                                                        class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                                                        <%= currentLanguage==='en' ? 'Suppliers' : '供應商' %>
                                                                      </span>
                                                                    </div>
      
                                                                    <div class="bg-blue-50 p-4 rounded-lg">
                                                                      <h4
                                                                        class="text-md font-medium mb-3 text-gray-700 flex items-center">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                          class="h-5 w-5 mr-2 text-blue-500" fill="none"
                                                                          viewBox="0 0 24 24" stroke="currentColor">
                                                                          <path stroke-linecap="round" stroke-linejoin="round"
                                                                            stroke-width="2"
                                                                            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                                                        </svg>
                                                                        <%= currentLanguage==='en' ? 'Companies' : '公司' %>
                                                                      </h4>
                                                                      <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                                                        <% suppliersCompanies.forEach(function(company) { %>
                                                                          <div
                                                                            class="flex items-center p-2 bg-white rounded shadow-sm">
                                                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                                              class="h-4 w-4 text-blue-400 mr-2" fill="none"
                                                                              viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M9 5l7 7-7 7" />
                                                                            </svg>
                                                                            <span class="text-gray-700">
                                                                              <%= company %>
                                                                            </span>
                                                                          </div>
                                                                          <% }); %>
                                                                      </div>
                                                                    </div>
                                                                  </div>
                                                                  <% } %>
      
                                                                    <% if (hasBuyers) { %>
                                                                      <div class="mb-6">
                                                                        <div class="flex items-center mb-3">
                                                                          <span
                                                                            class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                                                            <%= currentLanguage==='en' ? 'Buyers' : '需求商' %>
                                                                          </span>
                                                                        </div>
      
                                                                        <div class="bg-green-50 p-4 rounded-lg">
                                                                          <h4
                                                                            class="text-md font-medium mb-3 text-gray-700 flex items-center">
                                                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                                              class="h-5 w-5 mr-2 text-green-500" fill="none"
                                                                              viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                                                            </svg>
                                                                            <%= currentLanguage==='en' ? 'Companies' : '公司' %>
                                                                          </h4>
                                                                          <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                                                            <% buyersCompanies.forEach(function(company) { %>
                                                                              <div
                                                                                class="flex items-center p-2 bg-white rounded shadow-sm">
                                                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                                                  class="h-4 w-4 text-green-400 mr-2"
                                                                                  fill="none" viewBox="0 0 24 24"
                                                                                  stroke="currentColor">
                                                                                  <path stroke-linecap="round"
                                                                                    stroke-linejoin="round" stroke-width="2"
                                                                                    d="M9 5l7 7-7 7" />
                                                                                </svg>
                                                                                <span class="text-gray-700">
                                                                                  <%= company %>
                                                                                </span>
                                                                              </div>
                                                                              <% }); %>
                                                                          </div>
                                                                        </div>
                                                                      </div>
                                                                      <% } %>
      
                                                                        <% if (!hasSuppliers && !hasBuyers) { %>
                                                                          <div
                                                                            class="mt-4 bg-gray-50 p-4 rounded-lg text-center text-gray-500">
                                                                            <%= currentLanguage==='en' ? 'No companies listed'
                                                                              : '沒有列出公司' %>
                                                                          </div>
                                                                          <% } %>
      
                                                                            <% } %>
      
                                                                              <% if (platform.url) { %>
                                                                                <div class="mt-6">
                                                                                  <a href="<%= platform.url %>"
                                                                                    target="_blank" rel="noopener noreferrer"
                                                                                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                                                                                    <%= currentLanguage==='en'
                                                                                      ? 'Visit Website' : '訪問網站' %>
                                                                                      <svg xmlns="http://www.w3.org/2000/svg"
                                                                                        class="h-4 w-4 ml-2" fill="none"
                                                                                        viewBox="0 0 24 24"
                                                                                        stroke="currentColor">
                                                                                        <path stroke-linecap="round"
                                                                                          stroke-linejoin="round"
                                                                                          stroke-width="2"
                                                                                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                                                                      </svg>
                                                                                  </a>
                                                                                </div>
                                                                                <% } %>
      
                                                                                  <% if (platform.type !=='attachment_only' &&
                                                                                    platform.attachments &&
                                                                                    platform.attachments.length> 0)
                                                                                    {
                                                                                    %>
                                                                                    <div class="mt-6 border-t pt-4">
                                                                                      <h4 class="font-medium mb-2">
                                                                                        <%= currentLanguage==='en'
                                                                                          ? 'Downloads' : '下載' %>
                                                                                      </h4>
                                                                                      <div class="space-y-2">
                                                                                        <% platform.attachments.forEach(function(attachment)
                                                                                          { %>
                                                                                          <a href="<%= attachment.path %>"
                                                                                            download
                                                                                            class="flex items-center p-2 hover:bg-gray-50 rounded-md group">
                                                                                            <svg
                                                                                              xmlns="http://www.w3.org/2000/svg"
                                                                                              class="h-5 w-5 text-gray-400 group-hover:text-gray-500"
                                                                                              fill="none" viewBox="0 0 24 24"
                                                                                              stroke="currentColor">
                                                                                              <path stroke-linecap="round"
                                                                                                stroke-linejoin="round"
                                                                                                stroke-width="2"
                                                                                                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                                                                            </svg>
                                                                                            <span
                                                                                              class="ml-2 text-sm text-gray-600 group-hover:text-gray-900">
                                                                                              <%= attachment.originalName %>
                                                                                            </span>
                                                                                            <span
                                                                                              class="ml-auto text-xs text-gray-400">
                                                                                              <%= Math.round(attachment.size /
                                                                                                1024) %> KB
                                                                                            </span>
                                                                                          </a>
                                                                                          <% }); %>
                                                                                      </div>
                                                                                    </div>
                                                                                    <% } %>
                            </div>
                          </div>
                          <% }); %>
                      </div>
                    </section>
                    <% } %>
                      <% }); %>
              </div>
              <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-8 text-center">
                  <p class="text-gray-500">
                    <%= currentLanguage==='en' ? 'No platform content available yet.' : '尚無平台內容。' %>
                  </p>
                </div>
                <% } %>
          </div>
    </section>

    <!-- datacenter -->
    <section id="datacenter" class="px-6 pb-8 sm:px-16 sm:pb-16 lg:px-32 lg:pb-32">
        <h4 class="mb-8">
            <%= currentLanguage==='en' ? 'AI Computing Data Center Construction' : 'AI運算資料中心建置' %>
        </h4>
        <!-- Hero Image -->
        <div class="relative rounded-3xl overflow-hidden mb-8">
            <img src="../images/desktop/promotion_ai.jpg" alt="Green Innovation"
                class="w-full h-64 md:h-96 object-cover">
        </div>
        <!-- Description and CTA in flex layout -->
        <div class="flex flex-col lg:flex-row lg:space-x-6">
            <!-- Description on left - 8/12 width on desktop -->
            <div class="w-full lg:w-8/12 mb-6 lg:mb-0">
                <p class="">
                    本推動方案將建設數位基礎環境，提供大南方產業生態系所需的高品質與高安全運算資源與協作環境，並提供運算資源挹注新創與企業。
                    <br>
                    本中心規劃引進高速運算主機，滿足AI運算對資料與算力的高度需求，並打造新世代智慧節能IDC機房。機房採用綠能設施，如燃氣發電機、釩液流儲能系統與太陽能發電系統，建構智慧防災微電網，進一步降低PUE能耗，以實現節能減碳與淨零排放的永續發展目標。
                    <br>
                    AI運算資料中心將成為國內AI發展的重要基礎設施，推動產業創新與科技應用，加速智慧化時代的來臨。
                </p>
            </div>

            <!-- CTA Button on right - 4/12 width on desktop -->
            <div class="w-full min-w-max lg:w-4/12 flex justify-center lg:justify-end items-start">
                <a href="#" target="_blank"
                    class="inline-flex items-center px-6 py-3 border rounded-3xl custom-button-green">
                    <span>進入AI運算資料中心建置</span>
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- health -->
    <section id="health" class="px-6 pb-8 sm:px-16 sm:pb-16 lg:px-32 lg:pb-32">
        <h4 class="mb-8">
            <%= currentLanguage==='en' ? 'Smart Healthcare Industry Innovation Park' : '智慧健康產業創新園區' %>
        </h4>
        <!-- Hero Image -->
        <div class="relative rounded-3xl overflow-hidden mb-8">
            <img src="../images/desktop/promotion_health.jpg" alt="Green Innovation"
                class="w-full h-64 md:h-96 object-cover">
        </div>
        <!-- Description and CTA in flex layout -->
        <div class="flex flex-col lg:flex-row lg:space-x-6">
            <!-- Description on left - 8/12 width on desktop -->
            <div class="w-full lg:w-8/12 mb-6 lg:mb-0">
                <p class="">
                    本推動方案以臨床需求為核心，發展智慧醫療關鍵技術，結合AI、資通訊與醫療科技，聚焦數位醫療、病理管理與健康照護三大研究主題。透過創新應用，推動智慧醫療與健康照護的發展，提升醫療資源運用效率，促進偏鄉健康平權，提升國人健康生活品質。
                    <br>
                    本方案以智慧醫療與數位健康為雙軸核心，串聯醫療場域與技術團隊，促成醫院（BIO）與企業（ICT）共組聯盟，建立以人為中心的醫療服務平台，研發智慧醫療解決方案。同時，透過醫療服務的延伸，從醫院端拓展至社區與居家端，促成診所、照護機構、醫院及企業跨領域合作，共同推動以家為中心的數位健康科技發展。
                    <br>
                    智慧健康產業創新園區將為台灣智慧醫療與數位健康產業打造創新基地，加速技術發展與應用，促進醫療科技產業升級，實現更全面的健康照護服務。
                </p>
            </div>

            <!-- CTA Button on right - 4/12 width on desktop -->
            <div class="w-full min-w-max lg:w-4/12 flex justify-center lg:justify-end items-start">
                <a href="#" target="_blank"
                    class="inline-flex items-center px-6 py-3 border rounded-3xl custom-button-green">
                    <span>進入智慧健康產業創新園區</span>
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- green -->
    <section id="green" class="px-6 pb-8 sm:px-16 sm:pb-16 lg:px-32 lg:pb-32">
