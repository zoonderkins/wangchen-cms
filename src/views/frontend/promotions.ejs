<%- contentFor('body') %>

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center">
      <%= language==='en' ? 'Promotions' : '推動方案' %>
    </h1>

    <div class="flex flex-col md:flex-row justify-between items-start mb-8">
      <!-- Category Filter -->
      <div class="w-full md:w-1/3 mb-4 md:mb-0">
        <h2 class="text-xl font-semibold mb-2">
          <%= language==='en' ? 'Categories' : '類別' %>
        </h2>
        <ul class="space-y-2">
          <li>
            <a href="/<%= language %>/promotions"
              class="<%= !selectedCategory ? 'font-bold text-blue-600' : 'text-gray-700 hover:text-blue-600' %>">
              <%= language==='en' ? 'All Promotions' : '所有推動方案' %>
            </a>
          </li>
          <% categories.forEach(category=> { %>
            <li>
              <a href="/<%= language %>/promotions?category=<%= category.slug %>"
                class="<%= selectedCategory === category.slug ? 'font-bold text-blue-600' : 'text-gray-700 hover:text-blue-600' %>">
                <%= getContent(category, 'name' ) %>
              </a>
            </li>
            <% }); %>
        </ul>
      </div>

      <!-- Search Bar -->
      <div class="w-full md:w-2/3">
        <form action="/<%= language %>/promotions" method="GET" class="flex items-center mb-6">
          <% if (selectedCategory) { %>
            <input type="hidden" name="category" value="<%= selectedCategory %>">
            <% } %>
              <div class="relative flex-grow">
                <input type="text" name="search"
                  placeholder="<%= language === 'en' ? 'Search promotions by title...' : '按標題搜索推動方案...' %>"
                  value="<%= typeof currentSearch !== 'undefined' ? currentSearch : '' %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
              <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-r-md transition duration-200">
                <%= language==='en' ? 'Search' : '搜索' %>
              </button>
        </form>
      </div>
    </div>

    <!-- Promotions Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (items && items.length> 0) { %>
        <% items.forEach(item=> { %>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
            <% if (item.imagePath) { %>
              <div class="h-48 overflow-hidden">
                <img src="/<%= item.imagePath %>" alt="<%= language === 'en' ? item.title_en : item.title_tw %>"
                  class="w-full h-full object-cover">
              </div>
              <% } else { %>
                <div class="h-48 bg-gray-200 flex items-center justify-center">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                    </path>
                  </svg>
                </div>
                <% } %>
                  <div class="p-6">
                    <div class="mb-2">
                      <span
                        class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200 last:mr-0 mr-1">
                        <%= language==='en' ? item.category.name_en : item.category.name_tw %>
                      </span>
                      <span class="text-xs text-gray-500 ml-2">
                        <%= new Date(item.publishedDate).toLocaleDateString(language==='en' ? 'en-US' : 'zh-TW' ) %>
                      </span>
                    </div>
                    <h2 class="text-xl font-bold mb-2 text-gray-800">
                      <%= language==='en' ? item.title_en : item.title_tw %>
                    </h2>
                    <p class="text-gray-600 mb-4 line-clamp-3">
                      <% const content=language==='en' ? item.content_en : item.content_tw; const
                        plainText=content.replace(/<[^>]*>/g, '');
                        const summary = plainText.length > 150 ? plainText.substring(0, 150) + '...' : plainText;
                        %>
                        <%= summary %>
                    </p>
                    <a href="<%= item.url || '#' %>"
                      class="mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
                      <%=item.url ? 'target="_blank" rel="noopener noreferrer"' : '' %>>
                      <%= language==='en' ? item.title_en : item.title_tw %>
                    </a>
                  </div>
          </div>
          <% }); %>
            <% } else { %>
              <div class="col-span-3 text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">
                  <% if (currentSearch) { %>
                    <%= language==='en' ? `No promotions found for "${currentSearch}" ` : `找不到與 "${currentSearch}"
                      相關的推動方案` %>
                      <% } else if (selectedCategory) { %>
                        <%= language==='en' ? 'No promotions found in this category' : '此類別中找不到推動方案' %>
                          <% } else { %>
                            <%= language==='en' ? 'No promotions found' : '找不到推動方案' %>
                              <% } %>
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  <% if (currentSearch) { %>
                    <%= language==='en' ? 'Try a different search term or browse by category.' : '嘗試不同的搜索詞或按類別瀏覽。' %>
                      <% } else { %>
                        <%= language==='en' ? 'Check back later for new promotions.' : '請稍後再查看新的推動方案。' %>
                          <% } %>
                </p>
                <% if (currentSearch || selectedCategory) { %>
                  <div class="mt-4">
                    <a href="/<%= language %>/promotions" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                      <%= language==='en' ? 'View all promotions' : '查看所有推動方案' %>
                    </a>
                  </div>
                  <% } %>
              </div>
              <% } %>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.totalPages> 1) { %>
      <div class="mt-12 flex justify-center">
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          <% if (pagination.currentPage> 1) { %>
            <a href="/<%= language %>/promotions?page=<%= pagination.currentPage - 1 %><%= selectedCategory ? `&category=${selectedCategory}` : '' %><%= currentSearch ? `&search=${encodeURIComponent(currentSearch)}` : '' %>"
              class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
              <span class="sr-only">
                <%= language==='en' ? 'Previous' : '上一頁' %>
              </span>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                aria-hidden="true">
                <path fill-rule="evenodd"
                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                  clip-rule="evenodd" />
              </svg>
            </a>
            <% } %>

              <% for(let i=1; i <=pagination.totalPages; i++) { %>
                <a href="/<%= language %>/promotions?page=<%= i %><%= selectedCategory ? `&category=${selectedCategory}` : '' %><%= currentSearch ? `&search=${encodeURIComponent(currentSearch)}` : '' %>"
                  class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium <%= pagination.currentPage === i ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:bg-gray-50' %>">
                  <%= i %>
                </a>
                <% } %>

                  <% if (pagination.currentPage < pagination.totalPages) { %>
                    <a href="/<%= language %>/promotions?page=<%= pagination.currentPage + 1 %><%= selectedCategory ? `&category=${selectedCategory}` : '' %><%= currentSearch ? `&search=${encodeURIComponent(currentSearch)}` : '' %>"
                      class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                      <span class="sr-only">
                        <%= language==='en' ? 'Next' : '下一頁' %>
                      </span>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        aria-hidden="true">
                        <path fill-rule="evenodd"
                          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                          clip-rule="evenodd" />
                      </svg>
                    </a>
                    <% } %>
        </nav>
      </div>
      <% } %>
  </div>