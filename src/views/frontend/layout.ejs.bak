<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !=='undefined' ? title + ' - ' : '' %>Wangchen</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <%- typeof styles !== 'undefined' ? styles : '' %>
    <%- typeof head !== 'undefined' ? head : '' %>
</head>
<body>
    <nav class="bg-white shadow-sm">
        <div class="container mx-auto px-6 py-3">
            <div class="flex justify-between items-center">
                <div class="text-2xl font-bold">
                    <a href="/">Wangchen</a>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="text-gray-700 hover:text-gray-900">Home</a>
                    <a href="/articles" class="text-gray-700 hover:text-gray-900">Articles</a>
                    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                        <% categories.forEach(function(category) { %>
                            <div class="relative">
                                <button class="text-gray-700 hover:text-gray-900" id="cat<%= category.id %>">
                                    <%= category.name %>
                                    <% if (category._count.articles > 0) { %>
                                        <span class="badge bg-secondary"><%= category._count.articles %></span>
                                    <% } %>
                                </button>
                                <% if (category.children && category.children.length > 0) { %>
                                    <div class="absolute bg-white shadow-md p-4 w-48" aria-labelledby="cat<%= category.id %>">
                                        <% category.children.forEach(function(subcat) { %>
                                            <a class="block text-gray-700 hover:text-gray-900" href="/category/<%= subcat.id %>">
                                                <%= subcat.name %>
                                                <% if (subcat._count.articles > 0) { %>
                                                    <span class="badge bg-secondary"><%= subcat._count.articles %></span>
                                                <% } %>
                                            </a>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } %>
                    
                    <!-- Navigation Pages -->
                    <% if (typeof navigationPages !== 'undefined' && navigationPages.length > 0) { %>
                        <% navigationPages.forEach(function(page) { %>
                            <a class="text-gray-700 hover:text-gray-900" href="/page/<%= page.slug %>"><%= page.title %></a>
                        <% }); %>
                    <% } %>
                </div>
                <button class="md:hidden">
                    <svg class="h-6 w-6 fill-current text-gray-700" viewBox="0 0 24 24">
                        <path d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z" />
                    </svg>
                </button>
            </div>
            <div class="md:hidden hidden">
                <div class="flex flex-col mt-4 space-y-4">
                    <a href="/" class="text-gray-700 hover:text-gray-900">Home</a>
                    <a href="/articles" class="text-gray-700 hover:text-gray-900">Articles</a>
                    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                        <% categories.forEach(function(category) { %>
                            <a class="text-gray-700 hover:text-gray-900" href="/category/<%= category.id %>">
                                <%= category.name %>
                                <% if (category._count.articles > 0) { %>
                                    <span class="badge bg-secondary"><%= category._count.articles %></span>
                                <% } %>
                            </a>
                        <% }); %>
                    <% } %>
                    
                    <!-- Navigation Pages -->
                    <% if (typeof navigationPages !== 'undefined' && navigationPages.length > 0) { %>
                        <% navigationPages.forEach(function(page) { %>
                            <a class="text-gray-700 hover:text-gray-900" href="/page/<%= page.slug %>"><%= page.title %></a>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <main class="container mx-auto my-4">
        <%- typeof messages !== 'undefined' ? messages : '' %>
        <%- body %>
    </main>

    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto text-center">
            <p>&copy; <%= new Date().getFullYear() %> Wangchen. All rights reserved.</p>
        </div>
    </footer>

    <%- typeof scripts !== 'undefined' ? scripts : '' %>
</body>
</html>
