<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- typeof title !== 'undefined' ? title : 'Wangchen' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .dropdown-hover:hover > .dropdown-menu {
            display: block;
        }
        .dropdown-hover > .dropdown-toggle:active {
            pointer-events: none;
        }
        .dropdown-submenu {
            position: relative;
        }
        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
    </style>
    <%- typeof styles !== 'undefined' ? styles : '' %>
    <%- typeof head !== 'undefined' ? head : '' %>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Wangchen</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/articles">Articles</a>
                    </li>
                    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                        <% categories.forEach(function(category) { %>
                            <li class="nav-item dropdown dropdown-hover">
                                <a class="nav-link dropdown-toggle" href="/category/<%= category.id %>" id="cat<%= category.id %>" 
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <%= category.name %>
                                    <% if (category._count.articles > 0) { %>
                                        <span class="badge bg-secondary"><%= category._count.articles %></span>
                                    <% } %>
                                </a>
                                <% if (category.children && category.children.length > 0) { %>
                                    <ul class="dropdown-menu" aria-labelledby="cat<%= category.id %>">
                                        <% category.children.forEach(function(subcat) { %>
                                            <li>
                                                <a class="dropdown-item" href="/category/<%= subcat.id %>">
                                                    <%= subcat.name %>
                                                    <% if (subcat._count.articles > 0) { %>
                                                        <span class="badge bg-secondary"><%= subcat._count.articles %></span>
                                                    <% } %>
                                                </a>
                                            </li>
                                        <% }); %>
                                    </ul>
                                <% } %>
                            </li>
                        <% }); %>
                    <% } %>
                    
                    <!-- Navigation Pages -->
                    <% if (typeof navigationPages !== 'undefined' && navigationPages.length > 0) { %>
                        <% navigationPages.forEach(function(page) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/page/<%= page.slug %>"><%= page.title %></a>
                            </li>
                        <% }); %>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <%- typeof messages !== 'undefined' ? messages : '' %>
        <%- body %>
    </main>

    <footer class="bg-light py-4 mt-auto">
        <div class="container text-center">
            <p>&copy; <%= new Date().getFullYear() %> Wangchen. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
</body>
</html>
