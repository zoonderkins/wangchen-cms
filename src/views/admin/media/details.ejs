<%- include('../../partials/admin/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Media Details</h3>
                    <div class="card-tools">
                        <a href="/admin/media" class="btn btn-sm btn-secondary">Back to Media Library</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <% if (media.mimeType.startsWith('image/')) { %>
                                <img src="/<%= media.path %>" alt="<%= media.alt %>" class="img-fluid">
                            <% } else { %>
                                <div class="file-preview">
                                    <i class="fas fa-file fa-5x"></i>
                                    <p class="mt-2"><%= media.originalName %></p>
                                </div>
                            <% } %>
                        </div>
                        <div class="col-md-6">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Original Name</th>
                                        <td><%= media.originalName %></td>
                                    </tr>
                                    <tr>
                                        <th>File Type</th>
                                        <td><%= media.mimeType %></td>
                                    </tr>
                                    <tr>
                                        <th>Size</th>
                                        <td><%= (media.size / 1024).toFixed(2) %> KB</td>
                                    </tr>
                                    <tr>
                                        <th>Alt Text</th>
                                        <td><%= media.alt || 'Not set' %></td>
                                    </tr>
                                    <tr>
                                        <th>Caption</th>
                                        <td><%= media.caption || 'Not set' %></td>
                                    </tr>
                                    <tr>
                                        <th>Uploaded By</th>
                                        <td><%= media.uploader.username %></td>
                                    </tr>
                                    <tr>
                                        <th>Upload Date</th>
                                        <td><%= media.createdAt.toLocaleString() %></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="mt-3">
                                <a href="/admin/media/edit/<%= media.id %>" class="btn btn-primary">Edit</a>
                                <form action="/admin/media/<%= media.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this media?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/admin/footer') %>
