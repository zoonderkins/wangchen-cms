<%- contentFor('body') %>

<div class="container-fluid px-4">
    <h1 class="mt-4">Media Library</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-images me-1"></i>
                Media Files
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="fas fa-upload me-1"></i> Upload Media
            </button>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <% media.forEach(function(item) { %>
                    <div class="col-md-3">
                        <div class="card h-100">
                            <% if (item.mimeType.startsWith('image/')) { %>
                                <img src="<%= item.path %>" class="card-img-top" alt="<%= item.originalName %>">
                            <% } else { %>
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                    <i class="fas fa-file fa-3x text-secondary"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title text-truncate"><%= item.originalName %></h5>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Uploaded by: <%= item.uploader.username %><br>
                                        Size: <%= (item.size / 1024).toFixed(2) %> KB
                                    </small>
                                </p>
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-sm btn-outline-primary copy-url" data-url="<%= item.path %>">
                                        <i class="fas fa-copy"></i> Copy URL
                                    </button>
                                    <form action="/admin/media/<%= item.id %>/delete" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this file?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Media</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/media/upload" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="file" class="form-label">Choose File</label>
                        <input type="file" class="form-control" id="file" name="file" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
<script>
document.querySelectorAll('.copy-url').forEach(button => {
    button.addEventListener('click', function() {
        const url = this.dataset.url;
        navigator.clipboard.writeText(window.location.origin + url).then(() => {
            // Change button text temporarily
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-check"></i> Copied!';
            setTimeout(() => {
                this.innerHTML = originalText;
            }, 2000);
        });
    });
});
</script>

<%- contentFor('styles') %>
