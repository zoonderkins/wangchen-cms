<%- contentFor('body') %>

  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Create About Page Item</h1>
      <a href="/admin/about" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
        <i class="fas fa-arrow-left mr-2"></i> Back to List
      </a>
    </div>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <form action="/admin/about/create" method="POST" enctype="multipart/form-data">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="title_en">
              Title (English) <span class="text-red-500">*</span>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="title_en" name="title_en" type="text" placeholder="Enter English title" required>
          </div>
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="title_tw">
              Title (Chinese) <span class="text-red-500">*</span>
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="title_tw" name="title_tw" type="text" placeholder="Enter Chinese title" required>
          </div>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="type">
            Content Type <span class="text-red-500">*</span>
          </label>
          <select
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="type" name="type" required>
            <option value="">Select Type</option>
            <option value="plain_text">Plain Text</option>
            <option value="image">Image</option>
            <option value="bullet_points">Bullet Points</option>
          </select>
          <p class="text-gray-600 text-xs italic mt-1">
            Plain Text: Simple text content<br>
            Image: Upload an image with optional caption<br>
            Bullet Points: List of items (one per line)
          </p>
        </div>

        <div class="mb-4" id="imageUploadGroup">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="image">
            Image <span class="text-red-500">*</span>
          </label>
          <div class="border-2 border-gray-300 border-dashed rounded-lg p-6 bg-gray-50">
            <div class="flex flex-col items-center justify-center mb-4">
              <svg class="w-8 h-8 mb-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 20 16">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
              </svg>
              <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to select an image</span></p>
              <p class="text-xs text-gray-500 mb-4">PNG, JPG, GIF (MAX. 5MB)</p>
            </div>
            <input
              class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none"
              id="image" name="image" type="file" accept="image/*">
          </div>
          <p class="text-gray-600 text-xs italic mt-1">Recommended size: 800x600px or larger. Max file size: 5MB.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content_en">
              Content (English) <span class="text-red-500">*</span>
            </label>
            <textarea
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="content_en" name="content_en" rows="6" placeholder="Enter English content" required></textarea>
            <p class="text-gray-600 text-xs italic mt-1">For bullet points, enter one point per line.</p>
          </div>
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content_tw">
              Content (Chinese) <span class="text-red-500">*</span>
            </label>
            <textarea
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="content_tw" name="content_tw" rows="6" placeholder="Enter Chinese content" required></textarea>
            <p class="text-gray-600 text-xs italic mt-1">For bullet points, enter one point per line.</p>
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="order">
            Display Order
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="order" name="order" type="number" value="0" min="0">
          <p class="text-gray-600 text-xs italic mt-1">Items are displayed in ascending order (0, 1, 2, ...).</p>
        </div>

        <div class="flex items-center justify-end">
          <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            type="submit">
            Create Item
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- contentFor('script') %>
    <script>
      $(document).ready(function () {
        // Form validation before submit
        $('form').on('submit', function (e) {
          if ($('#type').val() === 'image' && !$('#image').val()) {
            e.preventDefault();
            alert('Please select an image file.');
            return false;
          }
          return true;
        });
      });
    </script>