<%- contentFor('body') %>

    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700">
            常見問題項目
        </h2>

        <!-- CTA -->
        <div
            class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple">
            <div class="flex items-center">
                <span>管理將顯示在常見問題頁面上的問題項目。</span>
            </div>
            <a href="/admin/faq/items/create"
                class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-800 border border-transparent rounded-lg active:bg-purple-900 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                <i class="fas fa-plus mr-2"></i> 新增項目
            </a>
        </div>

        <!-- Flash Messages -->
        <% if(typeof success_msg !=='undefined' && success_msg.length> 0) { %>
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                <%= success_msg %>
            </div>
            <% } %>
                <% if(typeof error_msg !=='undefined' && error_msg.length> 0) { %>
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                        <%= error_msg %>
                    </div>
                    <% } %>

                        <!-- Items Table -->
                        <div class="w-full overflow-hidden rounded-lg shadow-xs">
                            <div class="w-full overflow-x-auto">
                                <table class="w-full whitespace-no-wrap">
                                    <thead>
                                        <tr
                                            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-50">
                                            <th class="px-4 py-3">標題</th>
                                            <th class="px-4 py-3">分類</th>
                                            <th class="px-4 py-3">狀態</th>
                                            <th class="px-4 py-3">排序</th>
                                            <th class="px-4 py-3">作者</th>
                                            <th class="px-4 py-3">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y">
                                        <% if(items.length> 0) { %>
                                            <% items.forEach(function(item) { %>
                                                <tr class="text-gray-700">
                                                    <td class="px-4 py-3">
                                                        <div class="flex items-center text-sm">
                                                            <div>
                                                                <p class="font-semibold">
                                                                    <%= item.title_en %>
                                                                </p>
                                                                <p class="text-xs text-gray-500">
                                                                    <%= item.title_tw %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <%= item.category.name_en %>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <% if (item.status==='published' ) { %>
                                                            <span
                                                                class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full">
                                                                已發佈
                                                            </span>
                                                            <% } else if (item.status==='draft' ) { %>
                                                                <span
                                                                    class="px-2 py-1 font-semibold leading-tight text-orange-700 bg-orange-100 rounded-full">
                                                                    草稿
                                                                </span>
                                                                <% } else { %>
                                                                    <span
                                                                        class="px-2 py-1 font-semibold leading-tight text-gray-700 bg-gray-100 rounded-full">
                                                                        <%= item.status %>
                                                                    </span>
                                                                    <% } %>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <%= item.order %>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <%= item.author.username %>
                                                    </td>
                                                    <td class="px-4 py-3 text-sm">
                                                        <div class="flex items-center space-x-4 text-sm">
                                                            <a href="/admin/faq/items/edit/<%= item.id %>"
                                                                class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg focus:outline-none focus:shadow-outline-gray"
                                                                aria-label="編輯">
                                                                <svg class="w-5 h-5" aria-hidden="true"
                                                                    fill="currentColor" viewBox="0 0 20 20">
                                                                    <path
                                                                        d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z">
                                                                    </path>
                                                                </svg>
                                                            </a>
                                                            <form action="/admin/faq/items/<%= item.id %>/delete"
                                                                method="POST" onsubmit="return confirm('您確定要刪除此項目嗎？');">
                                                                <button type="submit"
                                                                    class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg focus:outline-none focus:shadow-outline-gray"
                                                                    aria-label="刪除">
                                                                    <svg class="w-5 h-5" aria-hidden="true"
                                                                        fill="currentColor" viewBox="0 0 20 20">
                                                                        <path fill-rule="evenodd"
                                                                            d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                                                                            clip-rule="evenodd"></path>
                                                                    </svg>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr class="text-gray-700">
                                                            <td colspan="6" class="px-4 py-3 text-sm text-center">
                                                                尚未找到任何常見問題項目。<a href="/admin/faq/items/create"
                                                                    class="text-purple-600 hover:underline">立即建立一個</a>。
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
    </div>