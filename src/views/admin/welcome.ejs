<%- contentFor('body') %>

  <div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
      <div class="bg-purple-600 p-6">
        <h2 class="text-white text-2xl font-bold">Welcome to the Admin Panel</h2>
        <p class="text-purple-100 mt-2">Hello, <%= user.username %>!</p>
      </div>

      <div class="p-6">
        <div class="bg-purple-50 border-l-4 border-purple-500 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-purple-700">
                You are logged in as <strong>
                  <%= user.role %>
                </strong>. Use the navigation menu to access the features available to you.
              </p>
            </div>
          </div>
        </div>

        <h3 class="text-lg font-semibold text-gray-800 mb-4">Available Features</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <% if (user.role==='editor' ) { %>
            <!-- Only show News and FAQ for editors -->
            <a href="/admin/news/items" class="block p-4 border rounded-lg hover:bg-gray-50">
              <h4 class="text-md font-medium text-gray-900">News Items</h4>
              <p class="mt-1 text-sm text-gray-500">Manage news items</p>
            </a>

            <a href="/admin/faq/items" class="block p-4 border rounded-lg hover:bg-gray-50">
              <h4 class="text-md font-medium text-gray-900">FAQ Items</h4>
              <p class="mt-1 text-sm text-gray-500">Manage frequently asked questions</p>
            </a>
            <% } else { %>
              <!-- Show all features for super_admin and admin -->
              <% if (user.permissions && user.permissions.includes('manage:articles')) { %>
                <a href="/admin/articles" class="block p-4 border rounded-lg hover:bg-gray-50">
                  <h4 class="text-md font-medium text-gray-900">Articles</h4>
                  <p class="mt-1 text-sm text-gray-500">Manage website articles</p>
                </a>
                <% } %>

                  <% if (user.permissions && user.permissions.includes('manage:pages')) { %>
                    <a href="/admin/pages" class="block p-4 border rounded-lg hover:bg-gray-50">
                      <h4 class="text-md font-medium text-gray-900">Pages</h4>
                      <p class="mt-1 text-sm text-gray-500">Manage website pages</p>
                    </a>
                    <% } %>

                      <a href="/admin/faq/items" class="block p-4 border rounded-lg hover:bg-gray-50">
                        <h4 class="text-md font-medium text-gray-900">FAQ</h4>
                        <p class="mt-1 text-sm text-gray-500">Manage frequently asked questions</p>
                      </a>

                      <a href="/admin/downloads" class="block p-4 border rounded-lg hover:bg-gray-50">
                        <h4 class="text-md font-medium text-gray-900">Downloads</h4>
                        <p class="mt-1 text-sm text-gray-500">Manage downloadable files</p>
                      </a>

                      <a href="/admin/news/items" class="block p-4 border rounded-lg hover:bg-gray-50">
                        <h4 class="text-md font-medium text-gray-900">News</h4>
                        <p class="mt-1 text-sm text-gray-500">Manage news items</p>
                      </a>

                      <a href="/admin/media" class="block p-4 border rounded-lg hover:bg-gray-50">
                        <h4 class="text-md font-medium text-gray-900">Media</h4>
                        <p class="mt-1 text-sm text-gray-500">Manage media files</p>
                      </a>
                      <% } %>
        </div>

        <div class="border-t pt-4">
          <p class="text-sm text-gray-600 mb-4">
            If you need additional access or have questions, please contact your administrator.
          </p>

          <a href="/admin/logout"
            class="inline-block bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded">
            Logout
          </a>
        </div>
      </div>
    </div>
  </div>