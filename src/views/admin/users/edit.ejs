<%- contentFor('body') %>

    <div class="container mx-auto px-4 py-8">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-900">編輯使用者</h1>
                <a href="/admin/users" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                    <i class="fas fa-arrow-left mr-2"></i>返回使用者列表
                </a>
            </div>

            <form action="/admin/users/<%= user.id %>" method="POST">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                        使用者名稱
                    </label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="username" type="text" name="username" value="<%= user.username %>" required>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                        電子郵件
                    </label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="email" type="email" name="email" value="<%= user.email %>" required>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        密碼
                    </label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="password" type="password" name="password"
                        placeholder="留空以保持目前密碼">
                    <p class="text-gray-600 text-xs italic mt-1">若不修改密碼請留空</p>
                </div>

                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="roleId">
                        角色
                    </label>
                    <select
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="roleId" name="roleId" required>
                        <% roles.forEach(function(role) { %>
                            <option value="<%= role.id %>" <%=user.roleId===role.id ? 'selected' : '' %>>
                                <%= role.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>

                <div class="mb-6">
                    <div class="flex items-center">
                        <input type="checkbox" id="isActive" name="isActive" <%= user.isActive ? 'checked' : '' %>
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label for="isActive" class="ml-2 block text-sm font-medium text-gray-700">
                            啟用帳號
                        </label>
                    </div>
                    <p class="text-gray-600 text-xs italic mt-1">未啟用的帳號將無法登入系統</p>
                </div>

                <div class="flex items-center justify-between">
                    <button
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        更新使用者
                    </button>
                </div>
            </form>

            <div class="mt-6 pt-6 border-t">
                <form action="/admin/users/<%= user.id %>/delete" method="POST"
                    onsubmit="return confirm('您確定要刪除此使用者嗎？');">
                    <button
                        class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        刪除使用者
                    </button>
                </form>
            </div>
        </div>
    </div>