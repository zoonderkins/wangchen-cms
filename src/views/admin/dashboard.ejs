<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Welcome, <%= user.username %></h1>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">Total Articles</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.articles %></p>
            <a href="/admin/articles" class="mt-2 inline-block text-blue-600 hover:text-blue-800">View all articles →</a>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">Total Pages</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.pages %></p>
            <a href="/admin/pages" class="mt-2 inline-block text-blue-600 hover:text-blue-800">View all pages →</a>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">Total Media</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.media %></p>
            <a href="/admin/media" class="mt-2 inline-block text-blue-600 hover:text-blue-800">View all media →</a>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">Categories</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.categories %></p>
            <a href="/admin/categories" class="mt-2 inline-block text-blue-600 hover:text-blue-800">View all categories →</a>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">FAQ Items</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.faqItems %></p>
            <a href="/admin/faq/items" class="mt-2 inline-block text-blue-600 hover:text-blue-800">Manage FAQ items →</a>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-gray-500 text-sm font-medium">Users</h3>
            <p class="text-3xl font-bold text-gray-900"><%= stats.users %></p>
            <% if (user.role === 'super_admin') { %>
            <a href="/admin/users" class="mt-2 inline-block text-blue-600 hover:text-blue-800">Manage users →</a>
            <% } %>
        </div>
    </div>

    <!-- Content Management -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Recent Articles -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b flex justify-between items-center">
                <h2 class="text-xl font-semibold">Recent Articles</h2>
                <a href="/admin/articles/create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <i class="fas fa-plus mr-2"></i> New Article
                </a>
            </div>
            <div class="divide-y">
                <% if (recentArticles && recentArticles.length > 0) { %>
                    <% recentArticles.forEach(article => { %>
                        <div class="px-6 py-4">
                            <a href="/admin/articles/edit/<%= article.id %>" class="text-lg font-medium text-blue-600 hover:text-blue-800">
                                <%= article.title %>
                            </a>
                            <div class="mt-1 text-sm text-gray-500">
                                <span>By <%= article.author ? article.author.username : 'Unknown' %></span>
                                <% if (article.category) { %>
                                    <span class="mx-2">•</span>
                                    <span><%= article.category.name %></span>
                                <% } %>
                                <span class="mx-2">•</span>
                                <span><%= new Date(article.createdAt).toLocaleDateString() %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="px-6 py-4 text-gray-500">
                        No articles yet. <a href="/admin/articles/create" class="text-blue-600 hover:text-blue-800">Create your first article</a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Recent Pages -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b flex justify-between items-center">
                <h2 class="text-xl font-semibold">Recent Pages</h2>
                <a href="/admin/pages/create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <i class="fas fa-plus mr-2"></i> New Page
                </a>
            </div>
            <div class="divide-y">
                <% if (recentPages && recentPages.length > 0) { %>
                    <% recentPages.forEach(page => { %>
                        <div class="px-6 py-4">
                            <a href="/admin/pages/edit/<%= page.id %>" class="text-lg font-medium text-blue-600 hover:text-blue-800">
                                <%= page.title %>
                            </a>
                            <div class="mt-1 text-sm text-gray-500">
                                <span>By <%= page.author ? page.author.username : 'Unknown' %></span>
                                <span class="mx-2">•</span>
                                <span><%= new Date(page.createdAt).toLocaleDateString() %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="px-6 py-4 text-gray-500">
                        No pages yet. <a href="/admin/pages/create" class="text-blue-600 hover:text-blue-800">Create your first page</a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Recent FAQ Items -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b flex justify-between items-center">
                <h2 class="text-xl font-semibold">Recent FAQ Items</h2>
                <a href="/admin/faq/items/create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <i class="fas fa-plus mr-2"></i> New FAQ
                </a>
            </div>
            <div class="divide-y">
                <% if (recentFaqItems && recentFaqItems.length > 0) { %>
                    <% recentFaqItems.forEach(item => { %>
                        <div class="px-6 py-4">
                            <a href="/admin/faq/items/edit/<%= item.id %>" class="text-lg font-medium text-blue-600 hover:text-blue-800">
                                <%= item.title %>
                            </a>
                            <div class="mt-1 text-sm text-gray-500">
                                <span>By <%= item.author ? item.author.username : 'Unknown' %></span>
                                <% if (item.category) { %>
                                    <span class="mx-2">•</span>
                                    <span><%= item.category.name %></span>
                                <% } %>
                                <span class="mx-2">•</span>
                                <span><%= item.status %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="px-6 py-4 text-gray-500">
                        No FAQ items yet. <a href="/admin/faq/items/create" class="text-blue-600 hover:text-blue-800">Create your first FAQ item</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b">
            <h2 class="text-xl font-semibold">Quick Actions</h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <a href="/admin/articles/create" class="block p-4 border rounded-lg hover:bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">Create New Article</h3>
                    <p class="mt-1 text-sm text-gray-500">Write and publish a new article</p>
                </a>
                <a href="/admin/pages/create" class="block p-4 border rounded-lg hover:bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">Create New Page</h3>
                    <p class="mt-1 text-sm text-gray-500">Create a custom page for your website</p>
                </a>
                <a href="/admin/faq/categories" class="block p-4 border rounded-lg hover:bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">Manage FAQ Categories</h3>
                    <p class="mt-1 text-sm text-gray-500">Organize your FAQ content</p>
                </a>
                <a href="/admin/faq/items/create" class="block p-4 border rounded-lg hover:bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">Create New FAQ</h3>
                    <p class="mt-1 text-sm text-gray-500">Add a new FAQ item to your website</p>
                </a>
            </div>
        </div>
    </div>
</div>
