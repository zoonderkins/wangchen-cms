# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DATABASE_URL="mysql://db_user:secure_password@your_production_host:3306/wangchen_db?connection_limit=5&pool_timeout=2"
DB_HOST=your_production_host
DB_PORT=3306
DB_NAME=wangchen_db
DB_USER=db_user
DB_PASSWORD=secure_password

# Session Configuration
SESSION_SECRET=long_random_secure_production_secret

# File Upload Configuration
UPLOAD_PATH=/var/www/wangchen/uploads/
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Logging Configuration
LOG_LEVEL=error
LOG_DIR=/var/log/wangchen
LOG_FILE_ERROR=error.log
LOG_FILE_COMBINED=combined.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14