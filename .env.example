# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=wangchen_db

# Session Secret
SESSION_SECRET=your_session_secret

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=50000000 # 50MB in bytes
MAX_IMAGE_SIZE=5242880 # 5MB in bytes
MAX_ATTACHMENT_SIZE=52428800 # 50MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_ATTACHMENT_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar

# Specific Upload Type Configurations
MAX_BANNER_SIZE=20971520 # 20MB in bytes
ALLOWED_BANNER_TYPES=jpg,jpeg,png,gif,webp,mp4

MAX_DOWNLOAD_SIZE=52428800 # 50MB in bytes
ALLOWED_DOWNLOAD_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,zip,rar

MAX_LINK_IMAGE_SIZE=5242880 # 5MB in bytes
ALLOWED_LINK_IMAGE_TYPES=jpg,jpeg,png,gif,webp

MAX_NEWS_IMAGE_SIZE=5242880 # 5MB in bytes
ALLOWED_NEWS_IMAGE_TYPES=jpg,jpeg,png,gif,webp

MAX_PAGE_ATTACHMENT_SIZE=52428800 # 50MB in bytes
ALLOWED_PAGE_ATTACHMENT_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,mp4

MAX_PROMOTION_IMAGE_SIZE=5242880 # 5MB in bytes
ALLOWED_PROMOTION_IMAGE_TYPES=jpg,jpeg,png,gif,webp

MAX_UPLOAD_SIZE=52428800 # 50MB in bytes
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,gif,mp4,mov,avi,pdf,docx,xlsx,xml,zip

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=/var/log/wangchen
